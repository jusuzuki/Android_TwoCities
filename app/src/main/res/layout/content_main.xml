<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.epicodus.twocities.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="#fea154">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/leftColumn">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="PORTLAND - OR"
                android:id="@+id/cityOneText"
                android:layout_gravity="center_horizontal"
                android:textColor="#80FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:48 AM"
                android:id="@+id/cityOneTime"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="35dp"
                android:typeface="sans"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="---"
                android:id="@+id/separatorOne"
                android:layout_gravity="center_horizontal"
                android:textColor="#80FFFFFF"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:layout_marginBottom="5dp"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="39º"
                android:id="@+id/currentTempOne"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="80dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="---"
                android:id="@+id/separatorOneB"
                android:layout_gravity="center_horizontal"
                android:textColor="#80FFFFFF"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:layout_marginBottom="5dp"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nextTwo"
                android:id="@+id/nextOne"
                android:layout_gravity="center_horizontal"
                android:textColor="#80FFFFFF"
                android:layout_marginTop="15dp"
                android:textSize="8dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:textStyle="bold" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/nextDaysOne">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="37º"
                            android:id="@+id/nextDayHighCityOne"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="27sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="23º"
                            android:id="@+id/nextDayLowCityOne"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="27sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="33º"
                            android:id="@+id/secondDayHighCityOne"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="27sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="22º"
                            android:id="@+id/secondDayLowCityOne"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="27sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="---"
                android:id="@+id/textView"
                android:layout_gravity="center_horizontal"
                android:textColor="#80FFFFFF"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:layout_marginBottom="5dp"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/exchange"
                android:id="@+id/textView3"
                android:layout_gravity="center_horizontal"
                android:textColor="#80FFFFFF"
                android:layout_marginTop="5dp"
                android:textSize="8dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:textStyle="bold" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:id="@+id/exchangeLayoutOne">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="USD"
                            android:id="@+id/dollarTextOne"
                            android:gravity="center"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:id="@+id/dollarCityOne"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:textSize="28sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:id="@+id/euroLayout">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="EUR"
                            android:id="@+id/euroTextOne"
                            android:gravity="center"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0.78"
                            android:id="@+id/euroCityOne"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:textSize="28sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/rightColumn" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="SAO PAULO - SP"
                android:id="@+id/cityTwoText"
                android:layout_gravity="center_horizontal"
                android:textColor="#80FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4:48 PM"
                android:id="@+id/cityTwoTime"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="35dp"
                android:typeface="sans"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="---"
                android:id="@+id/separatorTwo"
                android:layout_gravity="center_horizontal"
                android:textColor="#80FFFFFF"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:layout_marginBottom="5dp"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="39º"
                android:id="@+id/currentTempTwo"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="80dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="---"
                android:id="@+id/separatorTwoB"
                android:layout_gravity="center_horizontal"
                android:textColor="#80FFFFFF"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:layout_marginBottom="5dp"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nextTwo"
                android:id="@+id/nextTwo"
                android:layout_gravity="center_horizontal"
                android:textColor="#80FFFFFF"
                android:layout_marginTop="15dp"
                android:textSize="8dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:textStyle="bold" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/nextDaysTwo" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="37º"
                            android:id="@+id/nextDayHighCityTwo"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="27sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="23º"
                            android:id="@+id/nextDayLowCityTwo"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="27sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="33º"
                            android:id="@+id/secondDayHighCityTwo"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="27sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="22º"
                            android:id="@+id/secondDayLowCityTwo"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="27sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="---"
                android:id="@+id/textView2"
                android:layout_gravity="center_horizontal"
                android:textColor="#80FFFFFF"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:layout_marginBottom="5dp"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/exchange"
                android:id="@+id/textView4"
                android:layout_gravity="center_horizontal"
                android:textColor="#80FFFFFF"
                android:layout_marginTop="5dp"
                android:textSize="8sp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:textStyle="bold" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:id="@+id/linearLayout2" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="USD"
                            android:id="@+id/dollarTextTwo"
                            android:gravity="center"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:id="@+id/dollarCityTwo"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:textSize="28sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:id="@+id/linearLayout" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="EUR"
                            android:id="@+id/euroTextTwo"
                            android:gravity="center"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0.78"
                            android:id="@+id/euroCityTwo"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:textSize="28sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
